{% extends "base.html.twig" %}

{% block title %}Liste des annonces{% endblock %}

{% block content %}
<div class="container mt-4">
    <h1>Liste des annonces</h1>
    
    <div class="row">
        {% for annonce in annonces %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    {% if annonce.photos|length > 0 %}
                        <img src="{{ annonce.photos[0].url }}" class="card-img-top" alt="{{ annonce.titre }}">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ annonce.titre }}</h5>
                        <p class="card-text">{{ annonce.description|slice(0, 100) }}...</p>
                        <p class="card-text">
                            <small class="text-muted">
                                Par {{ annonce.annonceur.nom }} le {{ annonce.date_publication|date('d/m/Y') }}
                            </small>
                        </p>
                        <p class="card-text">
                            <strong>{{ annonce.prix }} â‚¬</strong>
                        </p>
                        <a href="/annonces/{{ annonce.id_annonce }}" class="btn btn-primary">Voir l'annonce</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
